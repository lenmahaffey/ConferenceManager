@model IEnumerable<Venue>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Postal Code</th>
            <th>Phone</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model)
        {
            <tr>
                <td>@v.Name</td>
                <td>@v.Address1 @(v.Address2 != null ? v.Address2 : "" )</td>
                <td>@v.City</td>
                <td>@v.State</td>
                <td>@v.PostalCode</td>
                <td>@v.Phone</td>
                <td>
                    <a asp-controller="Venue"
                       asp-action="EditVenue"
                       asp-route-id="@v.ID"
                       class="btn btn-secondary">Edit</a>
                </td>
                <td>
                    <a asp-controller="Venue"
                       asp-action="ViewVenue"
                       asp-route-id="@v.ID"
                       class="btn btn-danger">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Venue" asp-action="AddVenue" class="btn btn-secondary mb-3">Add Venue</a>