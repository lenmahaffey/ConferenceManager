@model IEnumerable<Attendee>
@{
    ViewBag.Title = "Manage Attendees";
}
<h1>@ViewBag.Title</h1>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Date Registered</th>
            <th>Presenter</th>
            <th>Staff</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Attendee a in Model)
        {
            <tr>
                <td>@a.FirstName</td>
                <td>@a.LastName</td>
                <td>@a.Phone</td>
                <td>@a.Email</td>
                <td>@a.DateRegistered.ToShortDateString()</td>
                <td>@(a.IsPresenter == true ? "yes" : "no") </td>
                <td>@(a.IsStaff == true ? "yes" : "no") </td>
                <td>
                    <a asp-action="ViewAttendee"
                       asp-route-id="@a.ID"
                       class="btn btn-secondary">View</a>
                </td>
                <td>
                    <a asp-action="EditAttendee"
                       asp-route-id="@a.ID"
                       class="btn btn-danger">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="AddAttendee" class="btn btn-secondary mb-3">Add Attendee</a>