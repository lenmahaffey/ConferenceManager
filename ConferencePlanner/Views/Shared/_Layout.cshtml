@{
    string controller =
        ViewContext.RouteData.Values["controller"].ToString();
    string action =
        ViewContext.RouteData.Values["action"].ToString();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Conference Planner</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-secondary">
            <a class="navbar-brand" href="/">ConferencePlanner</a>
            <button class="navbar-toggler" type="button"
                    data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="ToggleNavigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <nav class="collapse navbar-collapse" id="navbarSupportedContent">
                <div class="navbar-nav mr-auto">
                    <a class="nav-item nav-link @(controller == "Home" && action == "Index" ? "active" : "")"
                       asp-controller="Home" asp-action="Index">Home</a>

                    <a class="nav-item nav-link @(controller == "Conference" ? "active" : "")"
                       asp-controller="Conference" asp-action="ListConferences">Conferences</a>

                    <a class="nav-item nav-link @(controller == "Attendee" ? "active" : "")"
                       asp-controller="Attendee" asp-action="ListAttendees">Attendees</a>

                    <a class="nav-item nav-link @(controller == "Presentation" ? "active" : "")"
                       asp-controller="Presentation" asp-action="ListPresentations">Presentations</a>

                    <a class="nav-item nav-link @(controller == "Venue" ? "active" : "")"
                       asp-controller="Venue" asp-action="ListVenues">Venues</a>

                    <a class="nav-item nav-link @(controller == "Rooms" ? "active" : "")"
                       asp-controller="Room" asp-action="ListRooms">Rooms</a>
                </div>
            </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <p>&copy; 2021 - ConferencePlanner</p>
        </div>
    </footer>
</body>
</html>
