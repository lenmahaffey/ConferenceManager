@model Venue

@{
    ViewBag.Title = "Edit Venue";
}

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<h1>@ViewBag.Title</h1>

<form asp-action="SaveVenue" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row form-group">
        <div class="col-sm-6">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-sm-6">
            <label asp-for="Address1">Address Line 1</label>
            <input asp-for="Address1" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="Address1" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-sm-6">
            <label asp-for="Address2">Address Line 2</label>
            <input asp-for="Address2" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="Address2" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-sm-6">
            <label asp-for="City">City</label>
            <input asp-for="City" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-sm-6">
            <label asp-for="State">State</label>
            <input asp-for="State" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-sm-6">
            <label asp-for="PostalCode">Postal Code</label>
            <input asp-for="PostalCode" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-sm-6">
            <label asp-for="Phone">Phone Number</label>
            <input asp-for="Phone" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
    </div>

    <input type="hidden" asp-for="VenueID" />
    <button type="submit" class="btn btn-secondary">Save</button>
    <a asp-action="Listvenues" class="btn btn-danger">Cancel</a>
</form>